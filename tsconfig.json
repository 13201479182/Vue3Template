{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "preserve",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": ["ESNext", "DOM"],
        "skipLibCheck": true,
        "noEmit": true
    },
    // prettier-ignore
    "include": [
        "eslint-rule-test/**/*",
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.vue"
    ]
}
